<div class="languages-section">
    <div class="ui form grid">
        <div class="sixteen wide column">
            <div class="ui header section-title">
                <div class="content">
                    <h1>LANGUAGES</h1>
                    <div class="sub header">from {{selectedDocument}} document</div>
                </div>
            </div>
        </div>
        {{#each availableLanguages as |language|}}
            {{ui-checkbox
                    label=language.label
                    checked=language.isSelected
                    disabled=language.isReadOnly
                    onChange=(action (mut language.isSelected))
                    class="four wide column"}}
        {{/each}}
        <div class="sixteen wide column">
            <button class="ui right floated button black" {{action 'next'}}>Next</button>
            <button class="ui right floated button black" {{action 'prev'}}>Prev</button>
        </div>
    </div>
</div>


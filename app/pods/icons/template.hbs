<div class="languages-section">
    <div class="ui form grid">
        <div class="sixteen wide column">
            <div class="ui header section-title">
                <div class="content">
                    <h1>ICONS</h1>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="ui sixteen wide column">
                <table class="ui celled compact table">
                    <thead>
                    <tr>
                        <th colspan="2">
                            {{ui-checkbox checked=(gt enabledIcons.length 0) onChange=(action 'toggleAllIcons')}} ICONS
                        </th>
                        <th>{{ui-checkbox checked=englishEnabled onChange=(action (mut englishEnabled))}} ENGLISH</th>
                        <th>{{ui-checkbox checked=arabicEnabled onChange=(action (mut arabicEnabled))}} ARABIC</th>
                        <th>{{ui-checkbox checked=blankEnabled onChange=(action (mut blankEnabled))}} BLANK</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each icons as |icon index|}}
                        <tr class="{{unless icon.isSelected "unselected"}}">
                            <td onclick={{action (toggle "isSelected" icon)}}>
                                {{ui-checkbox checked=icon.isSelected}} {{sum index 1}}
                            </td>
                            <td class="icon-cell">
                                <div class="icon-image ui image middle-aligned">
                                    {{{icon.svg}}}
                                </div>
                            </td>
                            <td class="{{unless englishEnabled 'disabled'}}">{{icon.languages.0.value}}</td>
                            <td class="{{unless arabicEnabled 'disabled'}}">{{icon.languages.1.value}}</td>
                            <td class="{{unless blankEnabled 'disabled'}}">______________________</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>

            </div>
        </div>
        <div class="sixteen wide column">
            <button class="ui right floated button black" {{action "next"}}>Next</button>
            <button class="ui right floated button black" {{action "prev"}}>Prev</button>
        </div>
    </div>
</div>

